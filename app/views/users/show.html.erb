<% provide(:title, @user.uname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.uname %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.expenses.any? %>
      <!-- <h3>Expenses (<%= @user.expenses.count %>)</h3> -->
      <h3><%= pluralize(current_user.expenses.count, "expense") %></h3>
      <ol class="expenses">
        <%= render @expenses %>
      </ol>
      <%= will_paginate @expenses %>
    <% end %>
  </div>
</div>