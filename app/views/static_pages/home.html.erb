<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="expense_form">
        <%= render 'shared/expense_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Your Transactions</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Money Tracker</h1>

    <h2>
      Created by CSC667 Students <br>Vishal Ravishankar, Dylan King, and Jonathan Do
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

<% end %>